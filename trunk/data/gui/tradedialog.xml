<?xml version="1.0"?>
<Window width="500" height="550" border="5" titlesize="25">
	<title>
		<Paragraph style="title" translatable="yes">
			Trade Settings
		</Paragraph>
	</title>
	<contents>
		<TableLayout rows="10" cols="3">
			<colsize col="1" relative=".8"/>
			<colsize col="2" relative=".1"/>
			<colsize col="3" relative=".1"/>

			<rowsize row="1" relative="2"/>

			<cell row="1" col="1" valign="center" halign="center">
				<Paragraph style="messagebold" translatable="yes">
				Product</Paragraph>
			</cell>
			<cell row="1" col="2" valign="center">
				<Paragraph style="messagebold" translatable="yes">
				Buy</Paragraph>
			</cell>
			<cell row="1" col="3" valign="center">
				<Paragraph style="messagebold" translatable="yes">
				Sell</Paragraph>
			</cell>
			<cell row="2" col="1">
				<Paragraph style="message" translatable="yes">
				Jobs</Paragraph>
			</cell>
			<cell row="2" col="2">
				<CheckButton name="BuyJobs">
					<image src="images/gui/checkbox.png"/>
					<image-checked src="images/gui/checkbox_checked.png"/>
				</CheckButton>
			</cell>
			<cell row="2" col="3">
				<CheckButton name="SellJobs">
					<image src="images/gui/checkbox.png"/>
					<image-checked src="images/gui/checkbox_checked.png"/>
				</CheckButton>
			</cell>
			<cell row="3" col="1">
				<Paragraph style="message" translatable="yes">
				Food</Paragraph>
			</cell>
			<cell row="3" col="2">
				<CheckButton name="BuyCoal">
					<image src="images/gui/checkbox.png"/>
					<image-checked src="images/gui/checkbox_checked.png"/>
				</CheckButton>
			</cell>
			<cell row="3" col="3">
				<CheckButton name="BuyCoal">
					<image src="images/gui/checkbox.png"/>
					<image-checked src="images/gui/checkbox_checked.png"/>
				</CheckButton>
			</cell>
			<cell row="4" col="1">
				<Paragraph style="message" translatable="yes">
				Coal</Paragraph>
			</cell>
			<cell row="10" col="1" spanx="3" halign="center">
				<Button name="Close">
					<text-caption style="dialogbutton" translatable="yes">
					Close</text-caption>
					<image src="images/gui/dialogs/yesbutton.png"/>
				</Button>
			</cell>
		</TableLayout>
	</contents>
</Window>
