<Panel width="384" height="270" background="images/gui/mapview/minimap_bg.png">
	<TableLayout rows="3" cols="2" >
		<rowsize row="1" fixed="30"/>
		<rowsize row="2" fixed="204"/>
		<rowsize row="3" fixed="36"/>
		<colsize col="1" fixed="174"/>
		<colsize col="2" fixed="210"/>
		<cell row="1" col="2">
			<TableLayout rows="1" cols="5">
				<cell row="1" col="1">
					<Button name="SwitchMiniMap">
						<text font-size="16">Map</text>
					</Button>
				</cell>
				<cell row="1" col="2">
					<Button name="SwitchPBar">
						<text font-size="16">Stats</text>
					</Button>
				</cell>
				<cell row="1" col="3">
					<Button name="SwitchMPSGlobal">
						<text font-size="16">$</text>
					</Button>
				</cell>
				<cell row="1" col="4">
					<Button name="SwitchQueryTool">
						<text font-size="16">?</text>
					</Button>
				</cell>
				<cell row="1" col="5">
					<Button name="SwitchEconomy">
						<text font-size="16">Eco</text>
					</Button>
				</cell>
			</TableLayout>
		</cell>
		<cell row="2" col="1">
		<TableLayout rows="3" cols="3" border="false">
			<rowsize row="1" relative="1"/>
			<rowsize row="2" fixed="20"/>
			<rowsize row="3" fixed="45"/>
			<colsize col="1" relative="1"/>
			<colsize col="2" fixed="40"/>
			<colsize col="3" fixed="35"/>
			<cell row="2" col="3">
			<Button name="ZoomInButton">
				<image src="images/gui/buttons/round/button-round-40.png"/>
				<image-hover src="images/gui/buttons/round/button-round-hover-40.png"/>
				<image-clicked src="images/gui/buttons/round/button-round-clicked-40.png"/>
				<image-caption src="images/gui/zoom/zoomin.png"/>
				<tooltip translatable="yes">[+] Zoom in view so that less buildings but more
				details are visible</tooltip>
			</Button>
			</cell>
			<cell row="3" col="2">
			<Button name="ZoomOutButton">
				<image src="images/gui/buttons/round/button-round-40.png"/>
				<image-hover src="images/gui/buttons/round/button-round-hover-40.png"/>
				<image-clicked src="images/gui/buttons/round/button-round-clicked-40.png"/>
				<image-caption src="images/gui/zoom/zoomout.png"/>
				<tooltip translatable="yes">[-] Zoom out</tooltip>
			</Button>
			</cell>
		</TableLayout>
		</cell>
		<cell row="3" col="1" colspan="2">
		<TableLayout rows="1" cols="10">
			<rowsize row="1" fixed="35"/>
                        <colsize col="1" relative="1"/> <!-- move content to
                        the right side -->
			<colsize col="2" fixed="33"/>
			<colsize col="3" fixed="33"/>
			<colsize col="4" fixed="33"/>
			<colsize col="5" fixed="33"/>
			<colsize col="6" fixed="33"/>
			<colsize col="7" fixed="33"/>
			<colsize col="8" fixed="33"/>
			<colsize col="9" fixed="33"/>
			<colsize col="10" fixed="33"/>
                        <cell row="1" col="1">
                          <TableLayout rows="1" cols="4">
                           <cell row="1" col="1">
                            <Button name="HelpButton">
                                <image src="images/gui/buttons/round/button-round-40.png"/>
                                <image-hover src="images/gui/buttons/round/button-round-hover-40.png"/>
                                <image-clicked src="images/gui/buttons/round/button-round-clicked-40.png"/>
                                <image-caption src="images/gui/info/info.png"/>
                                <tooltip translatable="yes">[F1] Press this button
                                to get help</tooltip>
                            </Button>
                           </cell>
                           <cell row="1" col="2">
                            <Button name="hideHighBuildings">
                                <image src="images/gui/buttons/round/button-round-40.png"/>
                                <image-hover src="images/gui/buttons/round/button-round-hover-40.png"/>
                                <image-clicked src="images/gui/buttons/round/button-round-clicked-40.png"/>
                                <image-caption src="images/gui/info/hidehigh.png"/>
                                <tooltip translatable="yes">[h] Hide high buildings.
                                </tooltip>
                            </Button>
                           </cell>
                           <cell row="1" col="3">
                            <Button name="StatButton">
                                <image src="images/gui/buttons/round/button-round-40.png"/>
                                <image-hover src="images/gui/buttons/round/button-round-hover-40.png"/>
                                <image-clicked src="images/gui/buttons/round/button-round-clicked-40.png"/>
                                <image-caption src="images/gui/info/statistics.png"/>
                                <tooltip translatable="yes">Press this button
                                to show statistics</tooltip>
                            </Button>
                           </cell>
                           <cell row="1" col="4">
                            <Button name="mapOverlay">
                                <image src="images/gui/buttons/round/button-round-40.png"/>
                                <image-hover src="images/gui/buttons/round/button-round-hover-40.png"/>
                                <image-clicked src="images/gui/buttons/round/button-round-clicked-40.png"/>
                                <image-caption src="images/gui/info/mapoverlay.png"/>
                                <tooltip translatable="yes">[v] Cycle through MiniMap overlay modes.
                                </tooltip>
                            </Button>
                           </cell>
                          </TableLayout>
                        </cell>
                        <cell row="1" col="2">
			<CheckButton name="MapViewNormal">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_resident.png"/>
                <tooltip translatable="yes">outline map</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="3">
			<CheckButton name="MapViewUB40">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_ub40.png"/>
                <tooltip translatable="yes">unemployment</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="4">
			<CheckButton name="MapViewPollution">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_pollution.png"/>
                <tooltip translatable="yes">pollution, traffic density</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="5">
			<CheckButton name="MapViewFood">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_food.png"/>
                <tooltip translatable="yes">nourishments</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="6">
			<CheckButton name="MapViewPower">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_power.png"/>
                <tooltip translatable="yes">power supply</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="7">
			<CheckButton name="MapViewFire">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_fire.png"/>
                <tooltip translatable="yes">firedepartment cover</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="8">
			<CheckButton name="MapViewSport">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_soccer.png"/>
                <tooltip translatable="yes">sport cover</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="9">
			<CheckButton name="MapViewHealth">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_health.png"/>
                <tooltip translatable="yes">medical care</tooltip>
			</CheckButton>
			</cell>
			<cell row="1" col="10">
			<CheckButton name="MapViewCoal">
				<image src="images/gui/mapview/roundbuttons/roundbutton.png"/>
				<image-clicked src="images/gui/mapview/roundbuttons/roundbutton-clicked.png"/>
				<image-checked src="images/gui/mapview/roundbuttons/roundbutton-checked.png"/>
				<image-hover src="images/gui/mapview/roundbuttons/roundbutton-hover.png"/>
				<image-caption src="images/gui/mapview/roundbuttons/round_coal.png"/>
                <tooltip translatable="yes">coal depots</tooltip>
			</CheckButton>
			</cell>
		</TableLayout>
		</cell>
		<cell row="2" col="2">
			<SwitchComponent name="MiniMapSwitch">
				<MiniMap name="MiniMap" width="200" height="200" tilesize="2"/>
				<Import src="gui/pbar.xml"/>
                <Import src="gui/mps.xml"/>
                <EconomyGraph name="EconomyGraph" width="200" height="200" />
			</SwitchComponent>
		</cell>
	</TableLayout>
</Panel>
