SubDir TOP ;

TRANSLATABLE_SOURCES = ;

# Decend into subdirs
SubInclude TOP src ;
SubInclude TOP data ;
SubInclude TOP doc ;

UseAutoconf ;

# run xgettext on sources
if $(XGETTEXT) != ""
{
    DoXGetText data/locale/messages.pot : $(TRANSLATABLE_SOURCES) ;
}

# add some additional files to package
Package README TODO ;
InstallDoc README TODO ;

